module tb;
  bit [2:0] a[8];
  task arr(input bit [2:0]a[8]);
    for(int i=0;i<8;i++)
      begin
        a[i]=i;
      end
  endtask
  initial
    begin
      arr(a);
      for(int i=0;i<8;i++)
        begin
          $display("a[%0d]=%d",i,a[i]);
        end
    end
endmodule

# KERNEL: a[0]=0
# KERNEL: a[1]=0
# KERNEL: a[2]=0
# KERNEL: a[3]=0
# KERNEL: a[4]=0
# KERNEL: a[5]=0
# KERNEL: a[6]=0
# KERNEL: a[7]=0
