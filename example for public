class parent;
  int a=10;
  int b=7;
  function void print();
    $display("a=%d b=%d",a,b);
  endfunction
endclass

class child extends parent;
  int c;
  function void sub();
    c=a-b;
    $display("c=%d",c);
  endfunction
endclass

module tb;
  child ch;
  initial begin
    ch=new();
    ch.print();
    ch.sub();
  end
endmodule

a=10 b=7
# KERNEL: c=3
